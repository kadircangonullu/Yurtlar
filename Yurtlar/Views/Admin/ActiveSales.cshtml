@model List<Yurtlar.Product>
@{
    ViewBag.Title = "ActiveSales";
    Layout = "~/Views/Shared/Admin.cshtml";
}


<h3>Aktif Ürünler</h3>
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Yurt</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PName</td>
                <td>@item.PDesc</td>
                <td>@item.PPrice ₺</td>
                <td>@item.PStock</td>
                <td>@item.PKyk</td>
                <td>
                    <form method="post" action="@Url.Action("DeleteProduct", "Admin")">
                        <input type="hidden" name="id" value="@item.ProductId" />
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
