<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - KYK Pazar</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts & FontAwesome -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <!-- jQuery & Bootstrap -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="~/Content/custom.css" />

    <style>
        /* Navbar'ın içeriği kapatmaması için üst boşluk ekleme */
        body {
            padding-top: 70px; /* Navbar yüksekliği kadar içerik aşağı insin */
        }

        /* Navbar arkaplanını düzeltme */
        .navbar {
            background-color: #343a40 !important; /* Koyu arkaplan */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="fas fa-store"></i> KYK Pazar
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (Session["UserName"] != null)
                    {
                        <!-- Giriş yapılmışsa -->
                        <li class="nav-item">
                            <span class="nav-link text-warning">Hoş geldin, @Session["UserName"]</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("SatisEkle", "Home")">
                                <i class="fas fa-plus-circle"></i> Satış Ekle
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("UrunleriListele", "Home")">
                                <i class="fas fa-list"></i> Ürünleri Listele
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("OnaySayfam", "Home")">
                                <i class="fas fa-check"></i> Onay Sayfam
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Profilim", "Home")"><i class="fas fa-user"></i> Profilim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout", "Home")">
                                <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                            </a>
                        </li>
                    }
                    else
                    {
                        <!-- Giriş yapılmamışsa -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Home")">
                                <i class="fas fa-sign-in-alt"></i> Giriş Yap
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Register", "Home")">
                                <i class="fas fa-user-plus"></i> Kayıt Ol
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>


    <!-- İçerik Alanı -->
    <div class="container mt-4 flex-grow-1">
        <div class="body-content">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; @DateTime.Now.Year - KYK Pazar | Tüm Hakları Saklıdır.</p>
    </footer>

    @RenderSection("Scripts", required: false)

</body>
</html>
