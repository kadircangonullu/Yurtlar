@{
    ViewBag.Title = "Satış Ekle - KYK Pazar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header bg-gradient-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-5 fw-bold mb-3">
                    <i class="fas fa-plus-circle me-3"></i>Yeni Ürün Satışı
                </h1>
                <p class="lead mb-0">Ürününüzü saniyeler içinde ekleyin ve alıcılarla buluşun</p>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    <strong>Başarılı!</strong> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow-lg border-0">
                <div class="card-header bg-white border-0 py-4">
                    <h3 class="card-title text-center mb-0">
                        <i class="fas fa-edit me-2 text-primary"></i>Ürün Bilgileri
                    </h3>
                </div>
                <div class="card-body p-5">
                    <form method="post" action="/Home/SatisEkle" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-4">
                                    <input type="text" class="form-control" id="productName" name="PName" placeholder="Ürün Adı" required>
                                    <label for="productName">
                                        <i class="fas fa-tag me-2"></i>Ürün Adı
                                    </label>
                                    <div class="invalid-feedback">
                                        Lütfen ürün adını girin.
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-4">
                                    <input type="number" step="0.01" class="form-control" id="productPrice" name="PPrice" placeholder="Fiyat" required>
                                    <label for="productPrice">
                                        <i class="fas fa-lira-sign me-2"></i>Fiyat (₺)
                                    </label>
                                    <div class="invalid-feedback">
                                        Lütfen geçerli bir fiyat girin.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea class="form-control" id="productDescription" name="PDesc" placeholder="Ürün Açıklaması" rows="4" required></textarea>
                            <label for="productDescription">
                                <i class="fas fa-align-left me-2"></i>Ürün Açıklaması
                            </label>
                            <div class="invalid-feedback">
                                Lütfen ürün açıklaması girin.
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-4">
                                    <input type="number" class="form-control" id="productStock" name="PStock" placeholder="Adet" required min="1">
                                    <label for="productStock">
                                        <i class="fas fa-boxes me-2"></i>Stok Adedi
                                    </label>
                                    <div class="invalid-feedback">
                                        Lütfen geçerli bir adet girin.
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-4">
                                    <input type="text" class="form-control" id="dormitoryName" name="PKyk" placeholder="Yurt Adı" required>
                                    <label for="dormitoryName">
                                        <i class="fas fa-building me-2"></i>Yurt Adı
                                    </label>
                                    <div class="invalid-feedback">
                                        Lütfen yurt adını girin.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="productImage" class="form-label">
                                <i class="fas fa-camera me-2"></i>Ürün Fotoğrafı
                            </label>
                            <div class="file-upload-wrapper">
                                <input type="file" class="form-control" id="productImage" name="PImage" accept="image/*" required>
                                <div class="file-upload-info">
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        PNG, JPG, JPEG formatları desteklenir. Maksimum 5MB.
                                    </small>
                                </div>
                                <div class="invalid-feedback">
                                    Lütfen ürün fotoğrafı seçin.
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("UrunleriListele", "Home")" class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-check me-2"></i>Satışı Tamamla
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Tips Section -->
            <div class="card mt-4 border-0 bg-light">
                <div class="card-body p-4">
                    <h5 class="card-title text-primary mb-3">
                        <i class="fas fa-lightbulb me-2"></i>Satış İpuçları
                    </h5>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    Kaliteli fotoğraflar kullanın
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    Detaylı açıklama yazın
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    Makul fiyat belirleyin
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    Hızlı iletişim kurun
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    
    .form-floating > .form-control {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
    }
    
    .form-floating > .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 10px;
        padding: 12px 24px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
    }
    
    .btn-outline-secondary {
        border-radius: 10px;
        padding: 12px 24px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .file-upload-wrapper {
        position: relative;
    }
    
    .file-upload-info {
        margin-top: 0.5rem;
    }
    
    .alert {
        border-radius: 10px;
        border: none;
    }
    
    .card-header {
        border-bottom: 1px solid #e9ecef;
    }
    
    .card-title {
        font-weight: 600;
    }
    
    @@media (max-width: 768px) {
        .card-body {
            padding: 2rem !important;
        }
    }
</style>

<script>
// Form validation
(function() {
    'use strict';
    window.addEventListener('load', function() {
        var forms = document.getElementsByClassName('needs-validation');
        var validation = Array.prototype.filter.call(forms, function(form) {
            form.addEventListener('submit', function(event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    }, false);
})();
</script>
