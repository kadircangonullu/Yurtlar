@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap - KYK Pazar</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="login-page">
    <div class="container-fluid">
        <div class="row min-vh-100">
            <!-- Left Side - Background -->
            <div class="col-lg-6 d-none d-lg-block login-bg">
                <div class="overlay"></div>
                <div class="content-wrapper">
                    <div class="text-center text-white">
                        <h1 class="display-4 fw-bold mb-4">KYK Pazar'a Hoş Geldiniz</h1>
                        <p class="lead mb-4">Öğrenciler arası güvenli alışveriş platformu</p>
                        <div class="features">
                            <div class="feature-item mb-3">
                                <i class="fas fa-shield-alt me-3"></i>
                                <span>Güvenli Alışveriş</span>
                            </div>
                            <div class="feature-item mb-3">
                                <i class="fas fa-users me-3"></i>
                                <span>Sadece KYK Öğrencileri</span>
                            </div>
                            <div class="feature-item mb-3">
                                <i class="fas fa-tags me-3"></i>
                                <span>Uygun Fiyatlar</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Right Side - Login Form -->
            <div class="col-lg-6 col-12 d-flex align-items-center justify-content-center">
                <div class="login-form-wrapper">
                    <div class="text-center mb-4">
                        <div class="logo mb-3">
                            <i class="fas fa-store fa-3x text-primary"></i>
                        </div>
                        <h2 class="fw-bold text-dark mb-2">Giriş Yap</h2>
                        <p class="text-muted">Hesabınıza giriş yapın</p>
                    </div>
                    
                    <form method="post" action="/Home/Login" class="login-form">
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="username" name="username" placeholder="E-posta" required>
                            <label for="username">
                                <i class="fas fa-envelope me-2"></i>E-posta Adresi
                            </label>
                        </div>
                        
                        <div class="form-floating mb-4">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Şifre" required>
                            <label for="password">
                                <i class="fas fa-lock me-2"></i>Şifre
                            </label>
                        </div>
                        
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                            </button>
                        </div>
                        
                        @if(ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                @ViewBag.ErrorMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        
                        <div class="text-center mt-4">
                            <p class="text-muted mb-0">Hesabınız yok mu?</p>
                            <a href="@Url.Action("Register", "Home")" class="btn btn-link text-decoration-none">
                                <i class="fas fa-user-plus me-1"></i>Hemen Kayıt Ol
                            </a>
                        </div>
                    </form>
                    
                    <div class="text-center mt-4">
                        <a href="@Url.Action("Index", "Home")" class="text-muted text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i>Ana Sayfaya Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <style>
        * {
            font-family: 'Poppins', sans-serif;
        }
        
        .login-page {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }
        
        .login-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            position: relative;
            overflow: hidden;
        }
        
        .login-bg::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><polygon fill="rgba(255,255,255,0.1)" points="0,1000 1000,0 1000,1000"/></svg>');
            background-size: cover;
        }
        
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.3);
        }
        
        .content-wrapper {
            position: relative;
            z-index: 2;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        
        .login-form-wrapper {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            padding: 3rem;
            width: 100%;
            max-width: 450px;
            margin: 2rem;
        }
        
        .logo {
            transition: transform 0.3s ease;
        }
        
        .logo:hover {
            transform: scale(1.05);
        }
        
        .form-floating > .form-control {
            border-radius: 10px;
            border: 2px solid #e9ecef;
            transition: all 0.3s ease;
        }
        
        .form-floating > .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }
        
        .feature-item {
            font-size: 1.1rem;
            font-weight: 500;
        }
        
        .alert {
            border-radius: 10px;
            border: none;
        }
        
        .btn-link {
            color: #667eea;
            font-weight: 600;
        }
        
        .btn-link:hover {
            color: #764ba2;
        }
        
        @@media (max-width: 991.98px) {
            .login-form-wrapper {
                margin: 1rem;
                padding: 2rem;
            }
        }
    </style>
</body>
</html>
