@model Yurtlar.Users
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ol - KYK Pazar</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="register-page">
    <div class="container-fluid">
        <div class="row min-vh-100">
            <!-- Left Side - Background -->
            <div class="col-lg-6 d-none d-lg-block register-bg">
                <div class="overlay"></div>
                <div class="content-wrapper">
                    <div class="text-center text-white">
                        <h1 class="display-4 fw-bold mb-4">KYK Pazar'a Katılın</h1>
                        <p class="lead mb-4">Öğrenciler arası güvenli alışveriş topluluğuna katılın</p>
                        <div class="benefits">
                            <div class="benefit-item mb-3">
                                <i class="fas fa-check-circle me-3"></i>
                                <span>Ücretsiz üyelik</span>
                            </div>
                            <div class="benefit-item mb-3">
                                <i class="fas fa-check-circle me-3"></i>
                                <span>Güvenli alışveriş</span>
                            </div>
                            <div class="benefit-item mb-3">
                                <i class="fas fa-check-circle me-3"></i>
                                <span>Hızlı satış</span>
                            </div>
                            <div class="benefit-item mb-3">
                                <i class="fas fa-check-circle me-3"></i>
                                <span>7/24 destek</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Right Side - Register Form -->
            <div class="col-lg-6 col-12 d-flex align-items-center justify-content-center">
                <div class="register-form-wrapper">
                    <div class="text-center mb-4">
                        <div class="logo mb-3">
                            <i class="fas fa-user-plus fa-3x text-success"></i>
                        </div>
                        <h2 class="fw-bold text-dark mb-2">Hesap Oluştur</h2>
                        <p class="text-muted">KYK Pazar'a katılmak için bilgilerinizi girin</p>
                    </div>
                    
                    <form method="post" action="/Home/Register" class="register-form">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Ad" required>
                                    <label for="Name">
                                        <i class="fas fa-user me-2"></i>Ad
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="Surname" name="Surname" placeholder="Soyad" required>
                                    <label for="Surname">
                                        <i class="fas fa-user me-2"></i>Soyad
                                    </label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="Mail" name="Mail" placeholder="E-posta" required>
                            <label for="Mail">
                                <i class="fas fa-envelope me-2"></i>E-posta Adresi
                            </label>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input type="tel" class="form-control" id="Phone" name="Phone" placeholder="Telefon" required>
                            <label for="Phone">
                                <i class="fas fa-phone me-2"></i>Telefon Numarası
                            </label>
                        </div>
                        
                        <div class="form-floating mb-4">
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Şifre" required>
                            <label for="Password">
                                <i class="fas fa-lock me-2"></i>Şifre
                            </label>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="terms" required>
                            <label class="form-check-label" for="terms">
                                <small class="text-muted">
                                    <a href="#" class="text-decoration-none">Kullanım Şartları</a> ve 
                                    <a href="#" class="text-decoration-none">Gizlilik Politikası</a>'nı kabul ediyorum
                                </small>
                            </label>
                        </div>
                        
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Hesap Oluştur
                            </button>
                        </div>
                        
                        @if(ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                @ViewBag.ErrorMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        
                        <div class="text-center mt-4">
                            <p class="text-muted mb-0">Zaten hesabınız var mı?</p>
                            <a href="@Url.Action("Login", "Home")" class="btn btn-link text-decoration-none">
                                <i class="fas fa-sign-in-alt me-1"></i>Giriş Yap
                            </a>
                        </div>
                    </form>
                    
                    <div class="text-center mt-4">
                        <a href="@Url.Action("Index", "Home")" class="text-muted text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i>Ana Sayfaya Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <style>
        * {
            font-family: 'Poppins', sans-serif;
        }
        
        .register-page {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
        }
        
        .register-bg {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            position: relative;
            overflow: hidden;
        }
        
        .register-bg::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><polygon fill="rgba(255,255,255,0.1)" points="0,1000 1000,0 1000,1000"/></svg>');
            background-size: cover;
        }
        
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.3);
        }
        
        .content-wrapper {
            position: relative;
            z-index: 2;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        
        .register-form-wrapper {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            padding: 3rem;
            width: 100%;
            max-width: 500px;
            margin: 2rem;
        }
        
        .logo {
            transition: transform 0.3s ease;
        }
        
        .logo:hover {
            transform: translateY(-5px);
        }
        
        .form-floating > .form-control {
            border-radius: 10px;
            border: 2px solid #e9ecef;
            transition: all 0.3s ease;
        }
        
        .form-floating > .form-control:focus {
            border-color: #1e3c72;
            box-shadow: 0 0 0 0.2rem rgba(30, 60, 114, 0.25);
        }
        
        .btn-success {
            background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
            border: none;
            border-radius: 10px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(255, 107, 53, 0.3);
        }
        
        .benefit-item {
            font-size: 1.1rem;
            font-weight: 500;
        }
        
        .alert {
            border-radius: 10px;
            border: none;
        }
        
        .btn-link {
            color: #1e3c72;
            font-weight: 600;
        }
        
        .btn-link:hover {
            color: #ff6b35;
        }
        
        .form-check-input:checked {
            background-color: #1e3c72;
            border-color: #1e3c72;
        }
        
        @@media (max-width: 991.98px) {
            .register-form-wrapper {
                margin: 1rem;
                padding: 2rem;
            }
        }
    </style>
</body>
</html>


