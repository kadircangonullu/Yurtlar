
@{
    ViewBag.Title = "Ana Sayfa - KYK Pazar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<div class="hero-section position-relative overflow-hidden">
    <div class="hero-background"></div>
    <div class="container position-relative z-index-1">
        <div class="row min-vh-100 align-items-center">
            <div class="col-lg-8 mx-auto text-center text-white">
                <div class="hero-badge mb-4 animate__animated animate__fadeInDown">
                    <span class="badge bg-warning text-dark px-3 py-2">
                        <i class="fas fa-star me-2"></i>Öğrenci Dostu Platform
                    </span>
                </div>
                <h1 class="display-3 fw-bold mb-4 animate__animated animate__fadeInUp">
                    KYK Pazar'a Hoş Geldiniz
                </h1>
                <p class="lead mb-4 animate__animated animate__fadeInUp animate__delay-1s">
                    Öğrenciler arası güvenli alışveriş platformu. İhtiyacınız olan her şeyi burada bulun!
                </p>
                <div class="hero-stats mb-4 animate__animated animate__fadeInUp animate__delay-1s">
                    <div class="row justify-content-center">
                        <div class="col-auto">
                            <div class="stat-badge">
                                <i class="fas fa-users text-warning"></i>
                                <span class="ms-2">1000+ Kullanıcı</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="stat-badge">
                                <i class="fas fa-box text-warning"></i>
                                <span class="ms-2">5000+ Ürün</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="stat-badge">
                                <i class="fas fa-shield-alt text-warning"></i>
                                <span class="ms-2">%100 Güvenli</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="animate__animated animate__fadeInUp animate__delay-2s">
                    @if (Session["UserName"] == null)
                    {
                        <a href="@Url.Action("Register", "Home")" class="btn btn-primary btn-lg me-3 mb-2">
                            <i class="fas fa-user-plus me-2"></i>Hemen Kayıt Ol
                        </a>
                        <a href="@Url.Action("Login", "Home")" class="btn btn-outline-light btn-lg mb-2">
                            <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("UrunleriListele", "Home")" class="btn btn-primary btn-lg me-3 mb-2">
                            <i class="fas fa-search me-2"></i>Ürünleri Keşfet
                        </a>
                        <a href="@Url.Action("SatisEkle", "Home")" class="btn btn-outline-light btn-lg mb-2">
                            <i class="fas fa-plus-circle me-2"></i>Satış Ekle
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-lg-8 mx-auto">
                <span class="badge bg-primary mb-3 px-3 py-2">
                    <i class="fas fa-star me-2"></i>Özelliklerimiz
                </span>
                <h2 class="display-5 fw-bold text-dark mb-3">Neden KYK Pazar?</h2>
                <p class="lead text-muted">Güvenli, hızlı ve kolay alışveriş deneyimi</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-shopping-cart fa-3x text-primary"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Kolay Satış</h4>
                    <p class="text-muted">Ürünlerinizi saniyeler içinde ekleyin ve alıcılarla buluşun. Basit ve kullanıcı dostu arayüz.</p>
                    <div class="feature-benefits mt-3">
                        <span class="badge bg-light text-dark me-2 mb-2">Hızlı Ekleme</span>
                        <span class="badge bg-light text-dark me-2 mb-2">Kolay Yönetim</span>
                        <span class="badge bg-light text-dark mb-2">Anlık Güncelleme</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-shield-alt fa-3x text-success"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Güvenli Alışveriş</h4>
                    <p class="text-muted">Sadece KYK yurdu öğrencileri ile güvenli ticaret yapın. Doğrulanmış kullanıcılar.</p>
                    <div class="feature-benefits mt-3">
                        <span class="badge bg-light text-dark me-2 mb-2">Doğrulanmış Kullanıcılar</span>
                        <span class="badge bg-light text-dark me-2 mb-2">Güvenli Ödeme</span>
                        <span class="badge bg-light text-dark mb-2">7/24 Destek</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-tags fa-3x text-warning"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Uygun Fiyatlar</h4>
                    <p class="text-muted">İkinci el ve sıfır ürünleri uygun fiyatlarla bulun. Öğrenci bütçesine uygun.</p>
                    <div class="feature-benefits mt-3">
                        <span class="badge bg-light text-dark me-2 mb-2">Öğrenci Fiyatları</span>
                        <span class="badge bg-light text-dark me-2 mb-2">Pazarlık İmkanı</span>
                        <span class="badge bg-light text-dark mb-2">Kalite Garantisi</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-lg-8 mx-auto">
                <span class="badge bg-success mb-3 px-3 py-2">
                    <i class="fas fa-play me-2"></i>Nasıl Çalışır?
                </span>
                <h2 class="display-5 fw-bold text-dark mb-3">3 Basit Adımda Başlayın</h2>
                <p class="lead text-muted">KYK Pazar'da alışveriş yapmak çok kolay</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="step-card text-center p-4 h-100">
                    <div class="step-number mb-3">
                        <span class="step-circle">1</span>
                    </div>
                    <h4 class="fw-bold mb-3">Hesap Oluşturun</h4>
                    <p class="text-muted">Hızlı ve güvenli bir şekilde hesabınızı oluşturun. Sadece öğrenci kimliğiniz yeterli.</p>
                    <div class="step-icon mt-3">
                        <i class="fas fa-user-plus fa-2x text-primary"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="step-card text-center p-4 h-100">
                    <div class="step-number mb-3">
                        <span class="step-circle">2</span>
                    </div>
                    <h4 class="fw-bold mb-3">Ürün Ekleyin</h4>
                    <p class="text-muted">Satmak istediğiniz ürünleri kolayca ekleyin. Fotoğraf ve detayları girin.</p>
                    <div class="step-icon mt-3">
                        <i class="fas fa-plus-circle fa-2x text-success"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="step-card text-center p-4 h-100">
                    <div class="step-number mb-3">
                        <span class="step-circle">3</span>
                    </div>
                    <h4 class="fw-bold mb-3">Satış Yapın</h4>
                    <p class="text-muted">Alıcılarla iletişime geçin ve güvenli bir şekilde satışınızı tamamlayın.</p>
                    <div class="step-icon mt-3">
                        <i class="fas fa-handshake fa-2x text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-5 bg-primary text-white">
    <div class="container">
        <div class="row text-center">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-item">
                    <i class="fas fa-users fa-2x mb-3"></i>
                    <h3 class="fw-bold">1000+</h3>
                    <p class="mb-0">Aktif Kullanıcı</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-item">
                    <i class="fas fa-box fa-2x mb-3"></i>
                    <h3 class="fw-bold">5000+</h3>
                    <p class="mb-0">Ürün</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-item">
                    <i class="fas fa-handshake fa-2x mb-3"></i>
                    <h3 class="fw-bold">2000+</h3>
                    <p class="mb-0">Başarılı Satış</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-item">
                    <i class="fas fa-star fa-2x mb-3"></i>
                    <h3 class="fw-bold">4.8</h3>
                    <p class="mb-0">Kullanıcı Puanı</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
