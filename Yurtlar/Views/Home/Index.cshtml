
@{
    ViewBag.Title = "Ana Sayfa - KYK Pazar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<div class="hero-section position-relative overflow-hidden">
    <div class="hero-background"></div>
    <div class="container position-relative z-index-1">
        <div class="row min-vh-100 align-items-center">
            <div class="col-lg-8 mx-auto text-center text-white">
                <h1 class="display-3 fw-bold mb-4 animate__animated animate__fadeInUp">
                    KYK Pazar'a Hoş Geldiniz
                </h1>
                <p class="lead mb-4 animate__animated animate__fadeInUp animate__delay-1s">
                    Öğrenciler arası güvenli alışveriş platformu. İhtiyacınız olan her şeyi burada bulun!
                </p>
                <div class="animate__animated animate__fadeInUp animate__delay-2s">
                    @if (Session["UserName"] == null)
                    {
                        <a href="@Url.Action("Register", "Home")" class="btn btn-primary btn-lg me-3 mb-2">
                            <i class="fas fa-user-plus me-2"></i>Hemen Kayıt Ol
                        </a>
                        <a href="@Url.Action("Login", "Home")" class="btn btn-outline-light btn-lg mb-2">
                            <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("UrunleriListele", "Home")" class="btn btn-primary btn-lg me-3 mb-2">
                            <i class="fas fa-search me-2"></i>Ürünleri Keşfet
                        </a>
                        <a href="@Url.Action("SatisEkle", "Home")" class="btn btn-outline-light btn-lg mb-2">
                            <i class="fas fa-plus-circle me-2"></i>Satış Ekle
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-lg-8 mx-auto">
                <h2 class="display-5 fw-bold text-dark mb-3">Neden KYK Pazar?</h2>
                <p class="lead text-muted">Güvenli, hızlı ve kolay alışveriş deneyimi</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-shopping-cart fa-3x text-primary"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Kolay Satış</h4>
                    <p class="text-muted">Ürünlerinizi saniyeler içinde ekleyin ve alıcılarla buluşun. Basit ve kullanıcı dostu arayüz.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-shield-alt fa-3x text-success"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Güvenli Alışveriş</h4>
                    <p class="text-muted">Sadece KYK yurdu öğrencileri ile güvenli ticaret yapın. Doğrulanmış kullanıcılar.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-tags fa-3x text-warning"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Uygun Fiyatlar</h4>
                    <p class="text-muted">İkinci el ve sıfır ürünleri uygun fiyatlarla bulun. Öğrenci bütçesine uygun.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-5 bg-primary text-white">
    <div class="container">
        <div class="row text-center">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-item">
                    <i class="fas fa-users fa-2x mb-3"></i>
                    <h3 class="fw-bold">1000+</h3>
                    <p class="mb-0">Aktif Kullanıcı</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-item">
                    <i class="fas fa-box fa-2x mb-3"></i>
                    <h3 class="fw-bold">5000+</h3>
                    <p class="mb-0">Ürün</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-item">
                    <i class="fas fa-handshake fa-2x mb-3"></i>
                    <h3 class="fw-bold">2000+</h3>
                    <p class="mb-0">Başarılı Satış</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="stat-item">
                    <i class="fas fa-star fa-2x mb-3"></i>
                    <h3 class="fw-bold">4.8</h3>
                    <p class="mb-0">Kullanıcı Puanı</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 bg-dark text-white">
    <div class="container text-center">
        <h2 class="display-6 fw-bold mb-4">Hemen Başlayın!</h2>
        <p class="lead mb-4">KYK Pazar'ın avantajlarından yararlanmak için hemen üye olun.</p>
        @if (Session["UserName"] == null)
        {
            <a href="@Url.Action("Register", "Home")" class="btn btn-primary btn-lg">
                <i class="fas fa-rocket me-2"></i>Ücretsiz Kayıt Ol
            </a>
        }
        else
        {
            <a href="@Url.Action("UrunleriListele", "Home")" class="btn btn-primary btn-lg">
                <i class="fas fa-search me-2"></i>Ürünleri Keşfet
            </a>
        }
    </div>
</section>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        position: relative;
    }
    
    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><polygon fill="rgba(255,255,255,0.1)" points="0,1000 1000,0 1000,1000"/></svg>');
        background-size: cover;
    }
    
    .z-index-1 {
        z-index: 1;
    }
    
    .feature-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    }
    
    .feature-icon {
        transition: transform 0.3s ease;
    }
    
    .feature-card:hover .feature-icon {
        transform: scale(1.1);
    }
    
    .stat-item {
        transition: transform 0.3s ease;
    }
    
    .stat-item:hover {
        transform: scale(1.05);
    }
    
    .animate__animated {
        animation-duration: 1s;
    }
    
    .animate__delay-1s {
        animation-delay: 0.5s;
    }
    
    .animate__delay-2s {
        animation-delay: 1s;
    }
</style>
